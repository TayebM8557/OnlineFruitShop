@page
@model OnlineFruitShop.Pages.Admin.ProductPage.ProductListModel
@{
    Layout = "Shared/_LayoutAdmin";
}

<section id="dom">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">لیست  کالا ها </h4>
                    </div>
                </div>
                <div class="card-body collapse show">
                    <div class="card-block card-dashboard">
                        <table class="table table-striped table-bordered dom-jQuery-events">
                            <thead>
                                <tr>
                                    <th>نام کالا</th>
                                    <th>توضیحات</th>
                                    <th>قیمت</th>
                                    <th>موجودی</th>
                                    <th>تصویر</th>
                                    <th>دسته بندی</th>
                                    <th>تنظیمات</th>

                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model.products)
                            {
                                <tr role="row" class="odd">
                                    <td class="sorting_1">@item.Name</td>
                                    <td>@item.Description</td>
                                    <td> @item.Price</td>
                                    <td>@item.Stock</td>
                                        <td style="width: 20%;"><img src="/images/@item.ImageUrl" alt="تصویر محصول" class="img-thumbnail" style="width: 20%; height: auto;"></td>
                                    <td>@item.Category.Name</td>
                                    <td>
                                        <a asp-page-handler="Delete" asp-route-ID="@item.Id" onclick="confirm('آیا از حذف آیتم مطمئنید؟!')">
                                            <i class="fa fa-trash-o font-medium-3 mr-2"></i>
                                        </a>
                                        <a asp-page-handler="Edit" asp-page="EditProduct" asp-route-ID="@item.Id" onclick="confirm('آیا از ویرایش آیتم مطمئنید؟!')">
                                            <i class="fa fa-pencil font-medium-3 mr-2"></i>
                                        </a>

                                        <a class="info p-0" data-original-title="" title="">
                                            <i class="fa fa-check font-medium-3 mr-2"></i>
                                        </a>
                                    </td>
                                </tr>
                            }

                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>