@page
@model OnlineFruitShop.Pages.OrderProfileViewModel
@{
    Layout = "Shared/_LayoutProfile";
}

}

<div class="container mt-4">
    <h2 class="mb-4">جزئیات سفارش شماره @Model.Order.Id</h2>

    <div class="mb-3">
        <strong>نام مشتری:</strong> @Model.Order.User.FirstName @Model.Order.User.LastName <br />
        <strong>تاریخ سفارش:</strong> @Model.Order.OrderDate.ToString("yyyy/MM/dd") <br />
        <strong>وضعیت سفارش:</strong> @Model.Order.Status
    </div>

    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>نام محصول</th>
                <th>تعداد</th>
                <th>قیمت واحد</th>
                <th>تخفیف</th>
                <th>قیمت نهایی</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Order.OrderItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("N0") تومان</td>
                    <td>@item.Discount.ToString("N0") تومان</td>
                    <td>@item.TotalPrice.ToString("N0") تومان</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="4" class="text-end">مجموع کل:</th>
                <th>@Model.Order.TotalAmount.ToString("N0") تومان</th>
            </tr>
            <tr>
                <th colspan="4" class="text-end">روش پرداخت:</th>
                <td>
                    @if (Model.Payment != null)
                    {
                        <span>@Model.Payment.PaymentMethod - @Model.Payment.Status</span>
                    }
                    else
                    {
                        <span>پرداخت ثبت نشده</span>
                    }
                </td>
            </tr>
            <tr>
                <th colspan="4" class="text-end">شماره تراکنش:</th>
                <td>@Model.Payment?.TransactionId ?? "ندارد"</td>
            </tr>
        </tfoot>
    </table>
</div>