@page
@model OnlineFruitShop.Pages.OrderProfileModel
@{
    
    
    Layout = "Shared/_LayoutProfile";
}
<div class="container mt-4">
    <h2 class="mb-4">لیست سفارش‌های شما</h2>

    @if (Model.Orders.Any())
    {
        <table class="table table-bordered table-striped">
            <thead class="table-light">
            <tr>
                <th>شماره سفارش</th>
                <th>تاریخ ثبت</th>
                <th>وضعیت</th>
                <th>مبلغ کل</th>
                <th>وضعیت پرداخت</th>
                <th>جزئیات</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate.ToString("yyyy/MM/dd")</td>
                    <td>@order.Status</td>
                    <td>@order.TotalAmount.ToString("N0") تومان</td>
                        <td>@(order.Payment?.Status != null ? order.Payment.Status.ToString() : "در انتظار پرداخت")</td>

                    <td>
                        <a asp-page="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-primary">
                            مشاهده
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">شما هنوز سفارشی ثبت نکرده‌اید.</div>
    }
</div>