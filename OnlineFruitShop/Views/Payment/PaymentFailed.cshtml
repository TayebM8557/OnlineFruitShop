@{
    ViewData["Title"] = "خطا در پرداخت";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h4><i class="fas fa-times-circle"></i> خطا در پرداخت</h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-times-circle text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h5 class="text-danger mb-3">پرداخت انجام نشد</h5>
                    <p class="text-muted">شماره سفارش: <strong>@ViewBag.OrderId</strong></p>
                    <div class="alert alert-warning">
                        <strong>علت خطا:</strong> @TempData["PaymentError"]
                    </div>
                    <p class="text-muted">لطفاً مجدداً تلاش کنید یا با پشتیبانی تماس بگیرید.</p>
                    
                    <div class="mt-4">
                        <a href="/Cart" class="btn btn-primary me-2">
                            <i class="fas fa-shopping-cart"></i> بازگشت به سبد خرید
                        </a>
                        <a href="/OrderProfile" class="btn btn-outline-secondary me-2">
                            <i class="fas fa-list"></i> مشاهده سفارشات
                        </a>
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="fas fa-home"></i> بازگشت به صفحه اصلی
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
