@{
    ViewData["Title"] = "پرداخت موفق";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-success">
                <div class="card-header bg-success text-white text-center">
                    <h4><i class="fas fa-check-circle"></i> پرداخت با موفقیت انجام شد</h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>
                    <h5 class="text-success mb-3">سفارش شما با موفقیت ثبت شد</h5>
                    <p class="text-muted">شماره سفارش: <strong>@ViewBag.OrderId</strong></p>
                    <p class="text-muted">کد رهگیری: <strong>@TempData["PaymentSuccess"]</strong></p>
                    <p class="text-muted">سفارش شما در حال پردازش است و به زودی ارسال خواهد شد.</p>
                    
                    <div class="mt-4">
                        <a href="/OrderProfile" class="btn btn-primary me-2">
                            <i class="fas fa-list"></i> مشاهده سفارشات
                        </a>
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="fas fa-home"></i> بازگشت به صفحه اصلی
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
